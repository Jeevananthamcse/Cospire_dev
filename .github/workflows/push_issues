
name: Create Issue on Push

on:
  push:
    branches:
      - main

jobs:
  create-issue:
    runs-on: ubuntu-latest
    steps:
      - name: Create GitHub Issue via API
        uses: peter-evans/create-issue-from-file@v4
        with:
          title: "ðŸ”” Code was pushed to main"
          content-filepath: ./README.md  # or any file content
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
